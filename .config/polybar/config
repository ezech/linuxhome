[colors]
;background = ${xrdb:color0:#222}
background = #000
background-alt = #111
;foreground = ${xrdb:color7:#222}
foreground = #dfdfdf
foreground-alt = #555
primary = #fdfd3b
secondary = #a09608
alert = #2f343a

[bar/laptop]
#monitor = ${env:MONITOR:LVDS-1}
monitor = ${env:MONITOR:LVDS-0}
width = 100%
