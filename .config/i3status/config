}

battery 0 {
    format = "%status %percentage %remaining" # %emptytime"
    #hide_seconds = true                           #*gives error when uncommented**
    format_down = "No Battery"
    last_full_capacity = true
    integer_battery_capacity = true		  #battery percentage is shown without decimals
    status_chr = "âš‡ CHR"                          ##gives error......**
    status_bat = "âš¡ BAT"                         #**gives error....**
    #status_unk = "ï—"                              #**gives error....**
    status_unk = "ğŸ”‹"
    status_full = "â˜» FULL"                        #*gives error....**
    path = "/sys/class/power_supply/BAT%d/uevent"
    low_threshold = 20
    threshold_type = time
    separator = true
    separator_block_width = 10
}

run_watch DHCP {
    pidfile = "/var/run/dhclient*.pid"
}

run_watch VPNC {
    # file containing the PID of a vpnc process
    #pidfile = "/var/run/vpnc/pid"
    pidfile = "/var/run/ppp0.pid"
    format_down = ""
    separator = true
    separator_block_width = 10
}

run_watch VPNPPP {
    # file containing the PID of a vpnc process
    #pidfile = "/var/run/vpnc/pid"
    pidfile = "/var/run/ppp0.pid"
    format_down = ""
    separator = true
    separator_block_width = 10
}
path_exists VPN {
    # path exists when a VPN tunnel launched by nmcli/nm-applet is active
    path = "/proc/sys/net/ipv4/conf/tun0"
    separator = true
    separator_block_width = 10
}

