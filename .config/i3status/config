tztime tab {
    #format = "%Y-%m-%d %H:%M:%S"
    format = "TAB-%H:%M\t"
    timezone = "Australia/Sydney"
}
tztime azul {
    #format = "%Y-%m-%d %H:%M:%S"
    format = "AZL-%H:%M\t\t"
    timezone = "America/Sao_Paulo"
}
tztime local {
    #format = "%Y-%m-%d %H:%M:%S"
    format = "%A %b %d %H:%M \t\t"
}

