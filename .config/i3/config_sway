set                 $mod                Mod4
set                 $left               h
set                 $down               j
set                 $up                 k
set                 $right              l

#set                $term               urxvt256c-ml
set                 $term               urxvt
set                 $menu               dmenu_run
set $wallpaper  /usr/share/backgrounds/f29/default/normalish/f29.png

font    pango:Ubuntu,20
output  * bg $wallpaper fill

#output eDP-1 resolution 1920x1080 position 1920,0 scale 1

